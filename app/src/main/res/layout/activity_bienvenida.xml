<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sachonidas.myapplication.Main2Activity"
    android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¡Bienvenidos!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hemos creado esta aplicación con palabras que nos salen del corazón e imágenes de momentos muy especiales en nuestra vida. El destino ha querido que también trabajemos en el mismo campo y por ésto, que mejor que mostrarnos y comunicarnos con vosotros a través de ésta aplicación."
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Lo que Internet ha unido, que no lo separe jamás nadie” "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="20dp"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="110px"
        android:layout_height="110px"
        android:id="@+id/imageButton"
        android:onClick="lanzaInicio"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:maxHeight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
